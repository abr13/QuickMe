<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/layout_single_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/profile_sample" />

    <TextView
        android:id="@+id/layout_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="15dp"
        android:text="Display Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/layout_single_status"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/layout_single_name"
        android:layout_alignBottom="@+id/layout_single_image"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:text="User's Status"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/layout_single_isOnline"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/layout_single_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/layout_single_name"
        android:src="@drawable/is_online"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/layout_single_lastseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_single_name"
        android:layout_alignStart="@+id/layout_single_name"
        android:layout_marginTop="3dp"
        android:text="last seen"
        android:textSize="14sp" />
</RelativeLayout>