<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/message_text_background_left"
        android:maxEms="20"
        android:minEms="8"
        android:padding="15dp"
        android:text=""
        android:textColor="#fff"
        android:textSize="16sp"
        android:textAlignment="textStart"
        tools:text="message" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/message_text"
        android:layout_alignBottom="@+id/message_text"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="2dp"
        android:paddingStart="30dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#fff"
        android:textSize="11sp"
        tools:text="2019/07/15 20:55:35" />

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/message_text"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/imageview_corner"
        android:padding="2dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/time_text_image"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/message_image"
        android:layout_alignBottom="@id/message_image"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="2dp"
        android:textColor="#000"
        android:textSize="11sp"
        tools:text="2019/07/15 20:55:35" />

</RelativeLayout>